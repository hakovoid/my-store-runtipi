{
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "services": [
    {
      "name": "bytestash",
      "image": "ghcr.io/jordan-dalby/bytestash:latest",
      "isMain": true,
      "internalPort": 5000,
      "volumes": [
        {
          "hostPath": "{APP_DATA_DIR}/data/snippets",
          "containerPath": "/data/snippets"
        }
      ],
      "environment": [
        { "key": "JWT_SECRET", "value": "{JWT_SECRET}" },
        { "key": "TOKEN_EXPIRY", "value": "{TOKEN_EXPIRY}" },
        { "key": "DISABLE_ACCOUNTS", "value": "{DISABLE_ACCOUNTS}" },
        { "key": "ALLOW_NEW_ACCOUNTS", "value": "{ALLOW_NEW_ACCOUNTS}" },
        { "key": "DEBUG", "value": "{DEBUG}" }
      ]
    }
  ]
}
